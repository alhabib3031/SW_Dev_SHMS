    </script>
    <style>
        .icon-circle {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: 0 2px 4px rgba(0,0,0,.08);
        }
        .icon-circle .fas {
            font-size: 2.2rem; /* تكبير الأيقونات داخل الدوائر */
        }
        .list-group-item {
            font-size: 1.1rem; /* تكبير خط عناصر القائمة */
        }
    </style>
}