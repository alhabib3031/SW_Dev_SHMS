@model SW_Dev_SHMS.Data.Entities.Room
@{
    ViewData["Title"] = "غرفتي";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<!-- TempData messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container-fluid py-4 animate-fade-in-up">
    <div class="text-center mb-5">
        <i class="fas fa-bed fa-5x text-primary mb-3"></i>
        <h1 class="display-4 fw-bold text-primary">غرفتي الشخصية</h1>
        <p class="lead text-muted">استعرض تفاصيل غرفتك المخصصة في السكن الطلابي.</p>
        <div class="alert alert-success d-inline-block mt-3 px-4 py-2 rounded-pill shadow-sm">
            <i class="fas fa-check-circle me-2"></i> لقد تم تخصيص الغرفة <span class="fw-bold fs-5">@Model.RoomNumber</span> لك بنجاح!
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white py-3 rounded-top-4 text-center">
                    <h4 class="mb-0 fw-bold"><i class="fas fa-info-circle me-2"></i> تفاصيل الغرفة</h4>
                </div>
                <div class="card-body p-4 p-md-5">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-circle bg-light text-primary me-3">
                                    <i class="fas fa-door-open fa-2x"></i>
                                </div>
                                <div>
                                    <h5 class="mb-0 fw-bold">رقم الغرفة:</h5>
                                    <p class="text-muted fs-4 mb-0">@Model.RoomNumber</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-circle bg-light text-primary me-3">
                                    <i class="fas fa-building fa-2x"></i>
                                </div>
                                <div>
                                    <h5 class="mb-0 fw-bold">المبنى:</h5>
                                    <p class="text-muted fs-4 mb-0">@(Model.Hostel?.Name ?? "غير محدد")</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-circle bg-light text-primary me-3">
                                    <i class="fas fa-layer-group fa-2x"></i>
                                </div>
                                <div>
                                    <h5 class="mb-0 fw-bold">الدور:</h5>
                                    <p class="text-muted fs-4 mb-0">الدور @Model.RoomNumber</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-circle bg-light text-primary me-3">
                                    <i class="fas fa-users fa-2x"></i>
                                </div>
                                <div>
                                    <h5 class="mb-0 fw-bold">سعة الغرفة:</h5>
                                    <p class="text-muted fs-4 mb-0">2 طلاب</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-circle bg-light text-primary me-3">
                                    <i class="fas fa-user-friends fa-2x"></i>
                                </div>
                                <div>
                                    <h5 class="mb-0 fw-bold">الطلاب الحاليين:</h5>
                                    <p class="text-muted fs-4 mb-0">@(Model.Students?.Count ?? 0) طلاب</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-circle bg-light text-primary me-3">
                                    <i class="fas fa-clipboard-check fa-2x"></i>
                                </div>
                                <div>
                                    <h5 class="mb-0 fw-bold">حالة الغرفة:</h5>
                                    <p class="text-muted fs-4 mb-0">
                                        @if (Model.IsAvailable == true)
                                        {
                                            <span class="badge bg-success fs-6">متاحة</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning fs-6">مكتملة</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-5">

                    <h4 class="mb-4 text-primary fw-bold text-center"><i class="fas fa-couch me-2"></i> مرافق وخدمات الغرفة</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex align-items-center">
                            <i class="fas fa-check-circle text-success me-3 fs-5"></i>
                            <span class="fs-5">سرير خاص لكل طالب مع مرتبة ووسادة.</span>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <i class="fas fa-check-circle text-success me-3 fs-5"></i>
                            <span class="fs-5">مكتب دراسة وكرسي لكل طالب.</span>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <i class="fas fa-check-circle text-success me-3 fs-5"></i>
                            <span class="fs-5">خزانة ملابس فردية بقفل.</span>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <i class="fas fa-check-circle text-success me-3 fs-5"></i>
                            <span class="fs-5">تكييف هواء (تبريد وتدفئة).</span>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <i class="fas fa-check-circle text-success me-3 fs-5"></i>
                            <span class="fs-5">نقطة شبكة إنترنت سلكية (Wi-Fi متاح في المبنى).</span>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <i class="fas fa-check-circle text-success me-3 fs-5"></i>
                            <span class="fs-5">نافذة مع ستائر.</span>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <i class="fas fa-times-circle text-danger me-3 fs-5"></i>
                            <span class="fs-5">لا يوجد حمام خاص داخل الغرفة (حمامات مشتركة في كل دور).</span>
                        </li>
                    </ul>

                    @if (Model.Students != null && Model.Students.Any())
                    {
                        <hr class="my-5">
                        <h4 class="mb-4 text-primary fw-bold text-center"><i class="fas fa-users me-2"></i> زملاء الغرفة</h4>
                        <div class="row">
                            @foreach (var roommate in Model.Students)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card bg-light">
                                        <div class="card-body text-center">
                                            <i class="fas fa-user-circle fa-3x text-primary mb-2"></i>
                                            <h6 class="card-title mb-1">@($"{roommate.LastName} {roommate.LastName}".Trim())</h6>
                                            <p class="card-text text-muted small">@($"{roommate.FirstName} {roommate.LastName}" ?? "غير محدد")</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <div class="mt-5 text-center">
                        <a href="/Student/MaintenanceRequest" class="btn btn-warning btn-lg fw-bold rounded-pill px-5">
                            <i class="fas fa-tools me-2"></i> طلب صيانة للغرفة
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto hide alerts after 5 seconds
            setTimeout(function() {
                const alerts = document.querySelectorAll('.alert-dismissible');
                alerts.forEach(alert => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
        });
    </script>
    <style>
        .icon-circle {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: 0 2px 4px rgba(0,0,0,.08);
        }
        .icon-circle .fas {
            font-size: 2.2rem;
        }
        .list-group-item {
            font-size: 1.1rem;
        }
    </style>
}