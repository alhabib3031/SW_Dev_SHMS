@model SW_Dev_SHMS.Data.Entities.Student
@{
    ViewData["Title"] = "غرفتي - غير مخصصة";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="text-center mb-5">
        <i class="fas fa-door-closed fa-5x text-muted mb-3"></i>
        <h1 class="display-4 fw-bold text-muted">لم يتم تخصيص غرفة بعد</h1>
        <p class="lead text-muted">عذراً، لم يتم تخصيص غرفة لك في السكن الطلابي حتى الآن.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5 text-center">
                    <i class="fas fa-exclamation-triangle fa-4x text-warning mb-4"></i>
                    <h4 class="mb-3">ما يمكنك فعله:</h4>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Student" asp-action="Profile" class="btn btn-outline-primary w-100 rounded-pill">
                                <i class="fas fa-user me-2"></i> مراجعة ملفك الشخصي
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Payment" asp-action="Status" class="btn btn-outline-success w-100 rounded-pill">
                                <i class="fas fa-credit-card me-2"></i> مراجعة حالة الدفع
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>