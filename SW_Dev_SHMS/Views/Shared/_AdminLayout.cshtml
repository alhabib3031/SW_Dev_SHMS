<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>بيوت الطلاب – لوحة التحكم | @ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="icon" type="image/png" href="~/images/favicon.png" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div class="bg-primary text-white border-end border-light border-opacity-25" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 fs-4 fw-bold">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="logo text-white text-decoration-none">
                    <i class="fas fa-building me-2"></i>بيوت الطلاب
                </a>
            </div>
            <div class="list-group list-group-flush admin-sidebar">
                <a asp-area="" asp-controller="Admin" asp-action="AdminDashboard" class="list-group-item list-group-item-action bg-primary text-white py-3 border-bottom border-light border-opacity-25 active">
                    <i class="fas fa-chart-line me-2"></i>لوحة التحكم
                </a>
                <a asp-area="" asp-controller="Admin" asp-action="AssignRoom" class="list-group-item list-group-item-action bg-primary text-white py-3 border-bottom border-light border-opacity-25">
                    <i class="fas fa-bed me-2"></i>تخصيص الغرف
                </a>
                <a asp-area="" asp-controller="Admin" asp-action="ReviewRequests" class="list-group-item list-group-item-action bg-primary text-white py-3 border-bottom border-light border-opacity-25">
                    <i class="fas fa-inbox me-2"></i>الطلبات المعلقة
                </a>
                <a asp-area="" asp-controller="Admin" asp-action="StudentManagement" class="list-group-item list-group-item-action bg-primary text-white py-3 border-bottom border-light border-opacity-25">
                    <i class="fas fa-users me-2"></i>إدارة الطلاب
                </a>
                <a asp-area="" asp-controller="Admin" asp-action="Notifications" class="list-group-item list-group-item-action bg-primary text-white py-3 border-bottom border-light border-opacity-25">
                    <i class="fas fa-bell me-2"></i>إدارة الإشعارات
                </a>
                <a asp-area="" asp-controller="Admin" asp-action="Profile" class="list-group-item list-group-item-action bg-primary text-white py-3 border-bottom border-light border-opacity-25">
                    <i class="fas fa-user-circle me-2"></i>الملف الشخصي
                </a>
                <a asp-area="Identity" asp-page="/Account/Logout" class="list-group-item list-group-item-action bg-primary text-white py-3">
                    <i class="fas fa-sign-out-alt me-2"></i>تسجيل الخروج
                </a>
            </div>
        </div>
        <div class="container-fluid" id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle"><i class="fas fa-bars"></i></button>
                    <h5 class="navbar-brand mb-0 ms-3 d-none d-md-block">لوحة التحكم الإدارية</h5>
                    <div class="ms-auto me-3">
                        <span class="navbar-text fw-bold">مرحباً، المسؤول!</span>
                    </div>
                </div>
            </nav>

            <div class="container-fluid py-4">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
        </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // JavaScript لتفعيل زر إخفاء/إظهار الشريط الجانبي
        document.addEventListener('DOMContentLoaded', () => {
            const sidebarToggle = document.getElementById('sidebarToggle');
            const wrapper = document.getElementById('wrapper');

            if (sidebarToggle && wrapper) {
                sidebarToggle.addEventListener('click', (e) => {
                    e.preventDefault();
                    wrapper.classList.toggle('toggled');
                });
            }

            // تفعيل حالة "نشط" للعنصر الحالي في الشريط الجانبي
            const currentPath = window.location.pathname;
            document.querySelectorAll('.admin-sidebar .list-group-item').forEach(item => {
                if (item.getAttribute('href') === currentPath) {
                    item.classList.add('active');
                } else {
                    item.classList.remove('active');
                }
            });
        });
    </script>
</body>
</html>