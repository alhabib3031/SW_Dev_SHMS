@{
    ViewData["Title"] = "الصفحة الرئيسية";
}

<section class="hero-section bg-primary text-white d-flex align-items-center justify-content-center text-center position-relative overflow-hidden" style="min-height: 100vh;">
    @* <div class="hero-background"></div> *@

    <div class="container position-relative z-index-2">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                <!-- المحتوى النصي -->
                <div class="hero-content animate-fade-in-up">
                    <h1 class="display-3 fw-bold mb-4">
                        مرحباً بك في
                        <span class="text-warning">السكن الطلابي</span>
                    </h1>
                    <p class="lead mb-4">
                        نوفر لك بيئة سكنية مريحة وآمنة تساعدك على التركيز في دراستك وتحقيق أهدافك الأكاديمية
                    </p>
                    <div class="hero-buttons d-flex flex-column flex-sm-row justify-content-center align-items-center gap-3">
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-warning btn-lg rounded-pill px-5 fw-bold">
                            <i class="fas fa-user-plus me-2"></i>سجل الآن
                        </a>
                        <a asp-area="" asp-controller="Home" asp-action="About" class="btn btn-outline-light btn-lg rounded-pill px-5 fw-bold">
                            اعرف المزيد
                        </a>
                    </div>
                </div>

                <!-- البطاقة المتحركة -->
                <div class="floating-card mt-5 animate-fade-in-up">
                    <!-- الأنميشن مخصص هنا للأيقونة -->
                    <div class="animated-icon mb-3">
                        <i class="fas fa-building fa-8x text-warning"></i>
                    </div>
                    <h3 class="fw-bold">نظام إدارة متطور</h3>
                    <p>تقنية حديثة لخدمة أفضل</p>
                </div>

            </div>
        </div>
    </div>
</section>



