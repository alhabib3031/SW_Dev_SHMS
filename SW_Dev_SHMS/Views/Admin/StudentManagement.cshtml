@{
    ViewBag.Title = "إدارة الطلاب";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="text-center mb-5 animate-fade-in-up">
        <i class="fas fa-users-cog fa-5x text-primary mb-3"></i>
        <h1 class="display-4 fw-bold text-primary">إدارة الطلاب المقيمين</h1>
        <p class="lead text-muted">استعرض، أضف، عدّل، أو احذف بيانات الطلاب المقيمين في السكن.</p>
    </div>

    <div class="card shadow-lg border-0 rounded-4 mb-5 animate-fade-in-up" style="animation-delay: 0.2s;">
        <div class="card-header bg-primary text-white py-3 rounded-top-4">
            <h4 class="mb-0 fw-bold"><i class="fas fa-user-plus me-2"></i> إضافة طالب جديد</h4>
        </div>
        <div class="card-body p-4 p-md-5">
            <form method="post" action="/Student/Add">
                <div class="row g-4"> @* استخدام g-4 لزيادة التباعد بين الحقول *@
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="studentName" name="studentName" placeholder=" " required />
                            <label for="studentName">الاسم الكامل للطالب</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="email" class="form-control" id="email" name="email" placeholder=" " required />
                            <label for="email">البريد الإلكتروني</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="phone" name="phone" placeholder=" " required />
                            <label for="phone">رقم الهاتف</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="studentId" name="studentId" placeholder=" ">
                            <label for="studentId">الرقم الجامعي (اختياري)</label>
                        </div>
                    </div>
                </div>
                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-success btn-lg fw-bold rounded-pill">
                        <i class="fas fa-plus-circle me-2"></i> إضافة الطالب
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-lg border-0 rounded-4 animate-fade-in-up" style="animation-delay: 0.4s;">
        <div class="card-header bg-primary text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center">
            <h4 class="mb-0 fw-bold"><i class="fas fa-list-alt me-2"></i> قائمة الطلاب</h4>
            <div class="input-group w-auto"> @* شريط البحث *@
                <input type="text" class="form-control rounded-pill pe-5" id="studentSearch" placeholder="ابحث عن طالب..." aria-label="ابحث عن طالب">
                <span class="input-group-text bg-transparent border-0 position-absolute top-50 end-0 translate-middle-y rounded-end-pill" style="z-index: 1;">
                    <i class="fas fa-search text-muted"></i>
