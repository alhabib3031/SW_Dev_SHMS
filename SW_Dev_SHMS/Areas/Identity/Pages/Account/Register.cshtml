@page

@model RegisterModel
@{
    ViewData["Title"] = "تسجيل حساب جديد";
}

<div class="auth-container">
    <h2>إنشاء حساب جديد</h2>

    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-floating">
            <input asp-for="Input.Email" class="form-control" placeholder="البريد الإلكتروني" />
            <label asp-for="Input.Email">البريد الإلكتروني</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-floating">
            <input asp-for="Input.Password" class="form-control" placeholder="كلمة المرور" />
            <label asp-for="Input.Password">كلمة المرور</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-floating">
            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="تأكيد كلمة المرور" />
            <label asp-for="Input.ConfirmPassword">تأكيد كلمة المرور</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button id="registerSubmit" type="submit" class="btn w-100">إنشاء حساب</button>

        <div class="auth-links">
            <p><a asp-page="./Login">لديك حساب؟ تسجيل الدخول</a></p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}