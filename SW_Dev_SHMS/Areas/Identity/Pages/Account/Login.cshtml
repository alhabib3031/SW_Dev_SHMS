@page
@model LoginModel
@{
    ViewData["Title"] = "تسجيل الدخول";
}

<div class="auth-container">
    <h2>تسجيل الدخول</h2>

    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-floating">
            <input asp-for="Input.Email" class="form-control" placeholder="البريد الإلكتروني" />
            <label asp-for="Input.Email">البريد الإلكتروني</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-floating">
            <input asp-for="Input.Password" class="form-control" placeholder="كلمة المرور" />
            <label asp-for="Input.Password">كلمة المرور</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="Input.RememberMe" class="form-check-input" />
            <label asp-for="Input.RememberMe" class="form-check-label">تذكرني</label>
        </div>

        <button id="login-submit" type="submit" class="btn w-100">تسجيل الدخول</button>

        <div class="auth-links">
            <p><a asp-page="./ForgotPassword">هل نسيت كلمة المرور؟</a></p>
            <p><a asp-page="./Register">إنشاء حساب جديد</a></p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}